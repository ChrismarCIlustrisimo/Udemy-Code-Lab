<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Tracker</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>üìö Book Tracker</h2>



    <div class="container">
        <!-- Add Button -->

        <!-- Book List -->
        <div class="book-list">
            <div class="add-book-container">
                <a href="/books/add">
                    <button>‚ûï Add Book</button>
                </a>
            </div>
            <table class="book-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Date Read</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                        <tr>
                            <td><%= book.id %></td>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.date_read %></td>
                            <td class="book-actions">
                                <!-- Edit Button -->
                                <a href="/books/edit/<%= book.id %>">
                                    <button>‚úèÔ∏è Edit</button>
                                </a>
                                
                                <!-- Delete Button -->
                                <form action="/books/delete/<%= book.id %>" method="POST" style="display:inline;">
                                    <button type="submit">üóëÔ∏è Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    
</body>
</html>
